@model IEnumerable<DAL.DTO.ConsultEmployeeDTO>

@{
    ViewBag.Title = "Consulta de Funcionários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    @{ int? page = null;}
    <li><a href="@Url.Action("index","home", new { page } )">Home</a></li>
    <li class="active">Consultar Funcionário</li>
</ol>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Cadastro de Funcionário</h3>
    </div>
    <div class="panel-body">
        @if (TempData["mensagemSucesso"] != null)
        {
            <div class="row">
                <div class="alert alert-dismissible alert-info col-md-12 col-sm-12 col-xs-12">
                    <img src="~/Images/ic_done_all_black_18dp_1x.png" />
                    @Html.Raw(@TempData["mensagemSucesso"])
                </div>
            </div>
        }

        @if (TempData["mensagemErro"] != null)
        {
            <div class="row">
                <div class="alert alert-dismissible alert-danger col-md-12 col-sm-12 col-xs-12">
                    <img src="~/Images/ic_warning_black_18dp_1x.png" />
                    @Html.Raw(@TempData["mensagemErro"])
                </div>
            </div>
        }

        <br />
        <div class="row">
            <div class="panel panel-default col-md-6 col-sm-12 col-xs-12">
                <div class="panel-body">
                    <div class="input-group">
                        @Html.TextBox("findName", "", new { @Name= "findName", @class = "form-control", @tabindex = "1", @autofocus = true, @maxlength = "100", @placeholder = "Pesquisar Funcionário pelo Nome", @required = "required" })                        
                        <span class="input-group-btn">
                        <a title="Pesquisar Funcionário" class="btn btn-info" tabindex="" role="button" onclick="findNameEmployee()">
                                <img src="~/Images/ic_search_black_18dp_1x.png" />
                            </a>
                        </span>
                    </div>
                </div>
            </div>
                <div class="col-md-2 col-sm-6 col-xs-12" style="margin-top:15px;">
                    <p>
                        <a href="@Url.Action("register", "employee")" role="button" class="btn btn-success">
                            Cadastrar Funcionário
                        </a>
                    </p>
                </div>

                <div class="col-md-2 col-sm-6 col-xs-12" style="margin-top:15px;">
                    @using (Html.BeginForm("gereneratesallreportaction", "employee"))
                    {
                        <button type="submit" title="Clique para fazer o download do relatório" class="btn btn-info" tabindex="3" role="button">
                            <img src="~/Images/ic_check_black_18dp.png" /> Gerar Relatório
                        </button>
                    }
                </div>
            </div>
       
        @Html.Partial("_ConsultEmployee")
    </div>
</div>

<div>
    <a href="#" class="btn btn-warning" onclick="history.go(-1); return false;">
        <img src="~/Images/ic_arrow_back_black_18dp.png" title="Voltar" />
        Voltar
    </a>
</div>